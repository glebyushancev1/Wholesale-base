<Window x:Class="Wholesale_base.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wholesale_base"
        mc:Ignorable="d"
        Title="Оптовая база" Height="800" Width="1200" Background="LightGoldenrodYellow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>

        </Grid.RowDefinitions >

        <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center">
            <TextBlock Text="Оптовая база" FontWeight="Bold"/>
        </StackPanel>

        <Frame Grid.Row="1"
               Name="frmMain"
               ContentRendered="frmMain_ContentRendered"
               NavigationUIVisibility="Hidden">
            
        </Frame>
    </Grid>
</Window>
